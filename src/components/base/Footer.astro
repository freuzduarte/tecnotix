<style>
  .logo-container {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo-container svg {
    transition: transform 0.3s ease;
  }

  .logo-container:hover svg {
    transform: scale(1.05);
  }

  #logo-t {
    fill: #ffffff;
    transition: fill 0.3s ease;
  }

  #logo-polygon {
    fill: #25a1b0;
    transition: fill 0.3s ease;
  }

  .logo-container:hover #logo-t {
    fill: #f0f0f0;
  }

  .logo-container:hover #logo-polygon {
    fill: #1d7f8c;
  }
</style>
